<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="300.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx1.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label prefHeight="27.0" prefWidth="140.0" text="Calculate Sum">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumberOne" prefHeight="25.0" prefWidth="145.0" promptText="First number" />
      <TextField fx:id="txtNumberTwo" prefHeight="25.0" prefWidth="109.0" promptText="Second number" />
      <Button fx:id="btSum" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
      <Label text="Result = " />
      <Label fx:id="labelResult" prefHeight="17.0" prefWidth="30.0" />
   </children>
</VBox>
